<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="favicon.png">
  <link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css">
  <link rel="stylesheet" href="../../styles/style.css">
  <title>Blogster</title>
</head>
<body>
  <div class="container">
    <div class="row" id="navigation-small">
      <div class="col-6">
        <a href="/" class="text-decoration-none"><h1 class="mb-1 mt-4 display-4 font-weight-bold">Blogster</h1></a>
      </div>
      <div class="col-6 d-flex justify-content-end align-items-center">
        <a href="/articles/new" class="btn btn-success mt-4 font-weight-bold">New Article</a>
      </div>
    </div>

    <div class="card-container">
      <% articles.forEach(article => { %>
        <div class="card col-md-5">
          <div class="card-body">
            <div class="content">
              <h4 class="card-title"><%= article.title %></h4>
            <div class="card-subtitle text-muted mb-2">
              <%= 'Published on ' + article.createdAt.toLocaleDateString() %>
            </div>
            <div class="card-text mb-2"><%= article.description %></div>
            </div>
            <div class="buttons">
              <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
            <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>